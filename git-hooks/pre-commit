#!/usr/bin/env ruby
if `grep -rls "debugger" *` != ""
  puts "You've left a debugger in!"
  exit(1)
end
if `grep -rls "binding.pry" *` != ""
  puts "You've left a binding.pry in!"
  exit(1)
end
if `grep -rls "focus: true" *` != ""
  puts "You've left focus: true in"
  exit(1)
end
if `egrep -rls "^<<<<<<< |^>>>>>>> |^=======$" * | xargs file | egrep 'script|text'` != ""
  puts "You screwed the merge!"
  puts `egrep -rls "^<<<<<<< |^>>>>>>> |^=======$" * | xargs file | egrep 'script|text' | awk -F: '{print $1}'`
  exit(1)
end
